{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run All Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["test", "-A"],
      "attachSimplePort": 9229,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Run Current File Tests",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["test", "-A", "--inspect-brk"],
      "attachSimplePort": 9229,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    }
  ]
}
